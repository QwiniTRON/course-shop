<h1>Профиль</h1>

<div class="row">
    <div class="col s6">
        {{#if user.photoUrl}}
        <img class="avatar"
            src="/{{user.photoUrl}}"
            alt="Evan vue" title="evan vue">
        {{else}}
        <p>Фото нет</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Ваш email: <strong>{{user.mail}}</strong></p>

            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required min="1" value="{{user.name}}">
                <label for="name">Имя</label>
                <span class="helper-text" data-error="Введите имя"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Фото</span>
                    <input type="file" name="photo">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <button class="btn" name="submitbtn" type="submit">Изменить</button>
            <input type="hidden" name="_csrf" value="{{csrf}}">
        </form>
    </div>
</div>